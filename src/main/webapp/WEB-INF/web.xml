<web-app xmlns="http://java.sun.com/xml/ns/j2ee" version="2.4">
    <display-name>Hello World Servlet</display-name>
    <servlet>
        <servlet-name>Hello World</servlet-name>
        <servlet-class>org.estudo.servlets.HeloWorldServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hello World</servlet-name>
        <url-pattern>/helloWorld</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Counter</servlet-name>
        <servlet-class>org.estudo.servlets.SimpleCounter</servlet-class>
        <init-param>
            <param-name>InitialCounter</param-name>
            <param-value>10</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Counter</servlet-name>
        <url-pattern>/counter</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HolisticCounter</servlet-name>
        <servlet-class>org.estudo.servlets.HolisticCounter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HolisticCounter</servlet-name>
        <url-pattern>/HolisticCounter</url-pattern>
    </servlet-mapping>
</web-app>
